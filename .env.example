# Environment Variables Configuration for Tourism Chatbot
# Copy this file to .env and fill in your values

# ============================================================================
# Flask Configuration
# ============================================================================
SECRET_KEY=your-secret-key-here-change-in-production

# ============================================================================
# MongoDB Configuration
# ============================================================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_APP_DBNAME=VoyAIage

# ============================================================================
# Google Configuration (Custom Search for images)
# ============================================================================
GOOGLE_SEARCH_API_KEY=your-google-search-api-key
GOOGLE_CSE_CX=your-google-cse-id

# ============================================================================
# PostgreSQL Configuration (for LangGraph checkpointer)
# ============================================================================
# Option 1: Use DATABASE_URL (Render)
DATABASE_URL=postgresql+psycopg://user:password@host:5432/dbname

# Option 2: Individual PSQL variables (Local development)
PSQL_HOST=localhost
PSQL_PORT=5432
PSQL_USERNAME=postgres
PSQL_PASSWORD=your-password
PSQL_DBNAME=tourism_chatbot

# ============================================================================
# Google Gemini API (for LLM)
# ============================================================================
GEMINI_API_KEY=your-gemini-api-key

# ============================================================================
# Server Configuration
# ============================================================================
PORT=5000
DEBUG=False

# ============================================================================
# CORS Configuration
# ============================================================================
ALLOWED_ORIGINS=http://localhost:5173,https://yourdomain.com

# ============================================================================
# Chatbot Configuration
# ============================================================================
CHATBOT_ENABLED=True

# ============================================================================
# RAG System Configuration
# ============================================================================

# Paths
RAG_CSV_PATH=data/processed/danh_sach_thong_tin_dia_danh_chi_tiet.csv
RAG_CHROMA_DB_PATH=data/vector_db/chroma_tourism

# Embedding Model (LOCAL - when USE_REMOTE_EMBEDDINGS=False)
RAG_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# LLM Model
RAG_GEMINI_MODEL=gemini-2.5-flash-lite

# RAG Parameters
RAG_TOP_K_RESULTS=5
RAG_LLM_TEMPERATURE=0.7

# ============================================================================
# HuggingFace Spaces Configuration (NEW - for optimized deployment)
# ============================================================================

# Enable/disable remote embeddings
USE_REMOTE_EMBEDDINGS=True

# HuggingFace Space URL for embedding API
# Format: https://YOUR_USERNAME-tourism-embedding-api.hf.space
HF_SPACE_EMBEDDING_URL=https://your-username-tourism-embedding-api.hf.space

# ============================================================================
# Notes
# ============================================================================
# 
# For LOCAL DEVELOPMENT:
#   SET: USE_REMOTE_EMBEDDINGS=False
#   The app will load the embedding model locally
#
# For PRODUCTION (with HF Spaces):
#   SET: USE_REMOTE_EMBEDDINGS=True
#   SET: HF_SPACE_EMBEDDING_URL=https://your-hf-space-url
#   Backend stays lightweight, embeddings run on HF Space
#
# HuggingFace Space Benefits:
#   ✓ Free tier: 16GB RAM + 2 vCPUs
#   ✓ Independent scaling
#   ✓ Reduces backend memory requirement by ~4GB
#   ✓ Better embedding performance
